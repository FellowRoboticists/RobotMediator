<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.naiveroboticist.robotmediator.MediationActivity" >

    <ToggleButton
        android:id="@+id/btn_interface_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:onClick="onToggleActivation"
        android:text="@string/mediation_interface_toggle" />

    <Button
        android:id="@+id/verify_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_interface_activate"
        android:layout_below="@+id/btn_interface_activate"
        android:layout_marginTop="38dp"
        android:onClick="onVerifySignature"
        android:text="@string/mediation_verify_signature" />

    <Button
        android:id="@+id/create_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verify_signature"
        android:layout_centerVertical="true"
        android:onClick="onCreateSignature"
        android:text="@string/mediation_create_signature" />

    <Button
        android:id="@+id/btn_start_usb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_signature"
        android:layout_below="@+id/create_signature"
        android:layout_marginTop="26dp"
        android:onClick="onClickStartUSB"
        android:text="@string/btn_start_usb" />

</RelativeLayout>
